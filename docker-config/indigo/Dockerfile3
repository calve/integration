FROM node:latest

RUN git config --global url."https://github.com/".insteadOf git@github.com: && \
    git config --global url."https://".insteadOf git://

RUN git clone https://github.com/okgreece/indigo.git app

WORKDIR app

RUN npm install

EXPOSE 8080

#COPY ./start.sh /start.sh
#CMD ["/bin/sh", "start.sh"]
CMD ["npm", "start"]